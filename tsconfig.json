{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "paths": {
    "@/images/*": [
      "./public/images/*"
    ],
    "@/icons/*": [
      "./public/icons/*"
    ],
    "@/assets/images/*": [
      "./src/assets/images/*",
    ],
    "@/assets/icons/*": [
       "./src/assets/icons/*"
    ],
    "@/pages/*": [
      "./src/pages/*"
    ],
    "@/features/*": [
      "./src/features/*"
    ],
    "@/components/*": [
      "./src/components/*"
    ],
    "@/libs/*": [
      "./src/libs/*"
    ]
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
